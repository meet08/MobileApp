<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment.CardView.IncomingViewCell">
    <Frame BackgroundColor="LightBlue"
         Padding="10"
         HasShadow="False"
          
         Margin="10,10,80,10" CornerRadius="5">
        <StackLayout Orientation="Vertical">
            <Label Text="{Binding UserName}" FontSize="Small"></Label>
            <Label Text="{Binding UserMessage}" FontSize="Medium"/>
            <!--<Label Text="{Binding DatenTime}" FontSize="micro"/>-->
        </StackLayout>
        
    </Frame>
</ViewCell>